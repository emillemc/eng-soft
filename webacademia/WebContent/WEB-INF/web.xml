<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>webacademia</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
  <servlet>
    <servlet-name>logar</servlet-name>
    <servlet-class>servlets.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>logar</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>listarAluno</servlet-name>
    <servlet-class>servlets.ListarAlunosServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>listarAluno</servlet-name>
    <url-pattern>/listarAluno</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <servlet-name>cadastrarAluno</servlet-name>
    <servlet-class>servlets.CadastrarAlunoServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>cadastrarAluno</servlet-name>
    <url-pattern>/cadastrarAluno</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <servlet-name>removerAluno</servlet-name>
    <servlet-class>servlets.RemoverAlunoServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>removerAluno</servlet-name>
    <url-pattern>/removerAluno</url-pattern>
  </servlet-mapping>
</web-app>